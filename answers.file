<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>JS Event Playground</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>

  <h1>Interactive JS Assignment</h1>

  <!-- Button for event handling -->
  <button id="magicButton">Click Me!</button>

  <!-- Image gallery -->
  <div class="gallery">
    <img id="galleryImage" src="https://via.placeholder.com/200" alt="Gallery Image">
    <button id="nextImage">Next Image</button>
  </div>

  <!-- Accordion section -->
  <div class="accordion">
    <div class="accordion-item">
      <button class="accordion-header">Click to Expand</button>
      <div class="accordion-content">Here is some hidden content!</div>
    </div>
  </div>

  <!-- Form -->
  <form id="signupForm">
    <input type="text" id="name" placeholder="Name" required>
    <input type="email" id="email" placeholder="Email" required>
    <input type="password" id="password" placeholder="Password" required>
    <button type="submit">Sign Up</button>
    <div id="formFeedback"></div>
  </form>

  <script src="script.js"></script>
</body>
</html>
